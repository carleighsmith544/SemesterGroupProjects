<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SavorySweets.Project.Views"
             x:Class="SavorySweets.Project.Views.RecipeListPage"
             Title="All Recipes"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:FavoriteToIconConverter x:Key="FavoriteToIconConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Page Header -->
            <Frame BackgroundColor="#f8bbd0"
                   CornerRadius="20"
                   HasShadow="False">
                <Label Text="Explore All Recipes"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#d81b60"
                       Padding="10" />
            </Frame>

            <!-- Recipe List -->
            <CollectionView x:Name="recipeCollectionView"
                            ItemsLayout="VerticalList"
                            SelectionMode="Single"
                            SelectionChanged="OnRecipeTapped">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#fce4ec"
                               CornerRadius="12"
                               Margin="0,20"
                               Padding="15"
                               HasShadow="True"
                               BorderColor="Transparent">

                            <Grid ColumnDefinitions="100,*,Auto">
                                <!-- Image -->
                                <Image Grid.Column="0"
                                       Source="{Binding Imagepath}"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       BackgroundColor="LightGray"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />

                                <!-- Text -->
                                <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#d81b60" />
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="Black"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2" />
                                </VerticalStackLayout>

                                <!-- Favorite Icon using Converter -->
                                <ImageButton Grid.Column="2"
                                             Source="{Binding IsFavorite, Converter={StaticResource FavoriteToIconConverter}}"
                                             CommandParameter="{Binding Id}"
                                             Clicked="OnFavoriteClicked"
                                             BackgroundColor="Transparent"
                                             HeightRequest="30"
                                             WidthRequest="30"
                                             HorizontalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
